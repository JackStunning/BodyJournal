@{
  Layout = "_Layout";
}

@* @model BodyJournalClient.Models.Account; *@

<div class="text-center">
    <h1 class="display-4">Account Details</h1>

    @* <p>Display: Account Name</p> *@
    <p>@Model.AccountName</p>

    @* <p>Display: Account Password</p> *@
    <p>@Model.AccountPassword</p>

    @* <p>Button: Delete</p> *@
    <form action="Delete" method="POST">
      @* <input type="hidden" asp-for="@()"> *@
      <input type="submit" value="Delete">
    </form>

    @* <p>Link: Home, Data, Workouts, Exercises</p> *@
    <a href="/data"><p>View Data</p></a>
    <a href="/exercises"><p>View Exercises</p></a>
    <a href="/workouts"><p>View Workouts</p></a>
</div>