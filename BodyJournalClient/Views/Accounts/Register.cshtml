@{
  Layout = "_Layout";
}

@using BodyJournalClient.ViewModels

@model CreateUser;

<h1>Register a new user</h1>
<div class="content">
@using (Html.BeginForm("Register", "Account", FormMethod.Post))
  {
      @Html.LabelFor(user => user.FirstName)
      @Html.TextBoxFor(user=> user.FirstName)

      @Html.LabelFor(user=> user.LastName)
      @Html.PasswordFor(user=> user.LastName)

      @Html.LabelFor(user=> user.Username)
      @Html.PasswordFor(user=> user.Username)

      @* @Html.LabelFor(user=> user.Password)
      @Html.PasswordFor(user=> user.Password) *@

      <input type="submit" value="Register" class='btn'/>
  }
</div>