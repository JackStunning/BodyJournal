@{
  Layout = "_Layout";
}

@model BodyJournalClient.Models.Exercise;


<div class="text-center">
    <h1 class="display-4">Exercise Details</h1>
        
    @* <p>List: Exercise with their Sets, Reps,</p> *@
        <div class="exercise">
         <span>@Model.Name</span>
