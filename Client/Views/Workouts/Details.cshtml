
 @{
  Layout = "_Layout";
}

@using BodyJournalClient.Models;
@model BodyJournalClient.Models.Workout;

@if(Model.Exercises.Any())
  {
      <table class="table table-striped">
      <tr>
        <th>Name</th>
        <th>Weight</th>
        <th>Reps</th>
        <th>Sets</th>
        <th>MuscleGroup</th>
        <th>Intensity</th>
      </tr>
      @foreach (Exercise exercise in Model.Exercises)
      {
        <div class="exercise">
            <tr>
                <td>@exercise.Name</td>
                <td>@exercise.Weight</td>
                <td>@exercise.Reps</td>
                <td>@exercise.Sets</td>
                <td>@exercise.MuscleGroup</td>
                <td>@exercise.Intensity</td>
            </tr>         
        </div>
        }
      </table>
  }
  else
  {
    <h3>You dont have any exercises yet</h3>
  }
